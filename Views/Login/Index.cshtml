@model back_end_s7.Models.LoginModel

@{
    ViewBag.Title = "Login";
}

<h2 class="text-center text-white mb-5">Login</h2>
@if (TempData["Message"] != null)
{
    <div class="alert alert-success text-center w-50 m-auto" role="alert">
        @TempData["Message"]
    </div>
}
@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger text-center w-50 my-4 m-auto">@ViewBag.ErrorMessage</div>
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container d-flex align-content-center align-items-center flex-column">
        <div class="form-group text-white text-center mb-3">
            @Html.LabelFor(m => m.Username)
            @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
        </div>

        <div class="form-group text-white text-center mb-3">
            @Html.LabelFor(m => m.Password)
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        </div>

        <button type="submit" class="btn btn-success">Login</button>
    </div>
}